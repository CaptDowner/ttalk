<style type='text/css'>
div#topper2{
  margin-left: 5em;
}
div#topper2 h2{
  margin-bottom: -0.75em;  
}
table#categories{
  margin-left: 5.5em;
  margin-top: 0.5em;
}
table#categories td#cb{
  width: 8.5em;
  color: light blue;
  font-weight: 700;
}
table#categories td.label label{
  color: gold;
  margin-top: 0.25em;
}

</style>
<div id='topper2'>
  <h2>New <%= l = Language.where(id: 10).first.name %>  Phrase</h2>
</div>
<%= form_for(@phrase) do |f| %>
  <% if @phrase.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluratrze(@phrase.errors.count, "error") %> prohibited this phrase from being saved:</h2>
      <ul>
      <% @phrase.errors.full_messages.each do |message| %>
        <tr><%= message %></tr>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
   <table class='show-phrase'>
    <tr class="required">

    <tr class="required">
      <td class='label'><%= f.label :phrase_text %>:</td>
      <td class='show-label'><%= f.text_area :phrase_text, autofocus: true, cols: 64, rows: 2 %></td>
    </tr>
    <tr class="required">
      <td class='label'><%= f.label :audio_file %>:</td>
      <td class='show-label'><%= f.text_field :audio_file %></td>
    </tr>
    <tr class="required">
      <td class='label'; style='text-align: right';><%= f.label :key %>:</td>
      <td class='show-label'><%= f.text_field :key %></td>
    </tr>
  </table>
  <table id='categories'>
    <tr>
      <td class='label'; style='text-align: right';><%= f.label 'Categories' %>:</td>
      <td id='cb'><%= check_box_tag "Frequent", "1" %> Frequent </td><td id='cb'><%= check_box_tag "Q and A", "1" %> Q and A </td><td id='cb'><%= check_box_tag "Chat", "1" %> Chat </td><td id='cb'><%= check_box_tag "Food", "1" %> Food </td><td id='cb'><%= check_box_tag "Health", "1" %> Health </td>
    </tr>
    <tr>
      <td></td>
      <td id='cb'><%= check_box_tag "Kudos/Slams", "1" %> Kudos/Slams </td><td id='cb'><%= check_box_tag "Weather", "1" %> Weather </td><td id='cb'><%= check_box_tag "Sports", "1" %> Sports </td><td id='cb'><%= check_box_tag "Travel", "1" %> Travel </td><td id='cb'><%= check_box_tag "Help", "1" %> Help </td>
    </tr>
  </table>
  <div class="actions">
    <table>
      <tr>
        <td><%= f.submit 'Update', :class => 'button' %></td>
        <td><%= link_to "Cancel", phrases_path, class: 'button' %></td>
      </tr>
    </table>
  </fieldset>
<% end %>
