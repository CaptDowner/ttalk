<div id='topper2'>
  <h2>Editing Phrase</h2>
</div>
<%= form_for(@phrase) do |f| %>
  <% if @phrase.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@phrase.errors.count, "error") %> prohibited this phrase from being saved:</h2>
      <ul>
      <% @phrase.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :language_id %>
        <%= f.number_field :language_id %>
      </li>
      <li class="required">
        <%= f.label :phrase_text %>
        <%= f.text_area(:phrase_text, :size => "102x18") %>
      </li>
      <li class="required">
        <%= f.label :audio_file %>
        <%= f.text_field :audio_file %>
      </li>
      <li class="required">
        <b><%= f.label :key %>
        <%= f.text_field :key %>
      </li>
    </ol>

    <div class="actions">
      <%= f.submit %>
    </div>
  </fieldset>
<% end %>

