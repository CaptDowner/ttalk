<%#        </td>
        </tr>
    </table> %>
  <div class="actions">
    <table>
      <tr>
        <td><%= f.submit 'Update', :class => 'button' %></td>
        <td><%= link_to 'Show', @phrase, class: 'button' %></td>
        <td><%= link_to 'Back', phrases_path, class: 'button' %></td>
      </tr>
    </table>
  </div>
<% end %>

